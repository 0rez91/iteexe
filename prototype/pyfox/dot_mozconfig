# This file specifies the build flags for Firefox.  You can use it by adding:
#  . $topsrcdir/browser/config/mozconfig
# to the top of your mozconfig file.

export MOZ_PHOENIX=1
export PYTHON=/usr/bin/python2.4
mk_add_options MOZ_PHOENIX=1

ac_add_options --disable-ldap
ac_add_options --disable-mailnews
ac_add_options --enable-crypto
ac_add_options --disable-composer
ac_add_options --enable-single-profile
ac_add_options --disable-profilesharing
#ac_add_options --enable-optimize=-O2 # mozilla fallback
ac_add_options --enable-old-abi-compat-wrappers # building with >=gcc-3
ac_add_options --enable-installer # Matthew
ac_add_options --disable-pedantic # gentoo
ac_add_options --enable-crypto # gentoo
ac_add_options --without-system-jpeg # Matthew
ac_add_options --without-system-png # Matthew
ac_add_options --without-system-zlib # Matthew
ac_add_options --without-system-nspr # gentoo
ac_add_options --enable-default-toolkit=gtk2 # gentoo
#ac_add_options --enable-default-toolkit=xlib # Matthew
ac_add_options --enable-ipv6 # +ipv6
ac_add_options --enable-xinerama # +xinerama
ac_add_options --enable-xprint # +xprint
ac_add_options --disable-freetype2 # +truetype
ac_add_options --disable-freetypetest # +truetype
ac_add_options --disable-debug # -debug
ac_add_options --disable-tests # -debug
ac_add_options --enable-reorder # -debug
ac_add_options --enable-strip # -debug
ac_add_options --enable-strip-libs # -debug
ac_add_options --enable-elf-dynstr-gc # x86 optimized build
ac_add_options --enable-xft # -moznoxft
ac_add_options --enable-oji # 
ac_add_options --enable-mathml # 
ac_add_options --enable-jsd # +mozdevelop
ac_add_options --enable-xpctools # +mozdevelop
ac_add_options --enable-gnomevfs # +gnome
ac_add_options --enable-svg # +mozsvg
ac_add_options --enable-svg-renderer-cairo # -mozsvg
ac_add_options --with-default-mozilla-five-home=/usr/lib/MozillaFirefoxOptimized/lib/firefox-1.0.4 # 
ac_add_options --prefix=/usr/lib/MozillaFirefoxOptimized # 
ac_add_options --enable-extensions=cookie,xml-rpc,xmlextras,pref,transformiix,universalchardet,webservices,inspector,gnomevfs,negotiateauth,venkman,gnomevfs,python/xpcom
#ac_add_options --enable-extensions=cookie,xml-rpc,xmlextras,pref,transformiix,universalchardet,webservices,inspector,gnomevfs,negotiateauth,gnomevfs,python/xpcom
